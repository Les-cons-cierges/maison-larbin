{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
    <h1>Connexion</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <p>
            Connecté en tant que {{ app.user.userIdentifier }}.
            <a href="{{ path('app_logout') }}">Se déconnecter</a>
        </p>
    {% else %}
        <form method="post">
            <div>
                <label for="username">Email</label>
                <input type="email" id="username" name="_username" value="{{ last_username }}" required autocomplete="email">
            </div>

            <div>
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="_password" required autocomplete="current-password">
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button type="submit">Se connecter</button>
        </form>
    {% endif %}

    <p><a href="{{ path('app_register') }}">Créer un compte</a></p>
{% endblock %}
